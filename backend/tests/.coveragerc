[run]
# Store the data file inside the tests directory
data_file = tests/.coverage
# Source code is in the current directory (backend/)
source = .
omit =
    tests/*       # Don't measure coverage of test code itself
    */__init__.py # Usually not much logic here
    deploy/*      # Deployment scripts aren't typically covered by unit tests
    init_db.py    # Initialization script

[report]
# Standard exclusions
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    raise NotImplementedError
    if __name__ == .__main__.:
    pass
    # Exclude the sys.path manipulation in test files
    sys.path.append

[html]
# Store the HTML report inside the tests directory
directory = tests/htmlcov 