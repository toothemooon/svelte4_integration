[run]
# Source code is relative to the backend directory (where coverage is run)
source = .
omit =
    */site-packages/*
    .venv/*
    build/*       # Exclude the build directory entirely
    # Add other specific files if needed, e.g.
    # init_db.py

[report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    raise NotImplementedError
    if __name__ == .__main__.:
    pass
    # Exclude the sys.path manipulation in test files
    sys.path.append

[html]
directory = build/tests/htmlcov

[xml]
output = build/tests/coverage.xml

[json]
output = build/tests/coverage.json 